!!! 5
%html
%head
  %title
  = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' 
  = javascript_pack_tag 'application', 'data-turbolinks-eval': false 
  %link{ rel: "stylesheet", href: "https://fonts.googleapis.com/css2?family=Texturina:wght@300&display=swap", type: "text/css" }
  %link{:rel => "stylesheet", :href => "http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css"}/
  = csrf_meta_tags 

%body
  %header.main_header.clearfix
    .wrapper
      #logo 
        %p= link_to "Rails forum", root_path
      #buttons
        - if user_signed_in?
          = link_to "New Post", new_post_path
          = link_to "Sign Out", destroy_user_session_path, method: :delete
        - else 
          = link_to "Sign Up", new_user_registration_path
          = link_to "Sign In", new_user_session_path
  .wrapper
    %p.notice= notice
    %p.alert= alert

  .wrapper
    = yield